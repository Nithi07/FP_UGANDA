                                            <div class="row justify-content-center pt-lg-3"><button class="btn btn-white btn-sm">Submit</button></div>
                                        </form>
                                    </div>
                                    <div class="card-footer bg-primary">

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="pt-lg-9 card-footer border-0">
                            <% include ../partials/footer %>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Footer -->
            
        </div>
    </div>
    <!-- Include scripts -->
    <% include ../partials/scripts %>
    
    <script type="text/javascript">
        $("#loading").hide();
        </script>
</body>




