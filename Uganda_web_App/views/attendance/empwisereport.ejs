<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
        <div class="loader_post" id="loading">
            <div class="loader"></div>
        </div>
        <!-- Header -->
        <% include ../partials/pages_header %>
        <!-- Page content -->
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col">
                    <div class="card shadow">
                        <div style="margin-top: 10px;margin-left: 10px;margin-right: 10px;">
                            <a href="/attendance"><button class="btn btn-primary btn-xs" type="button"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i></button></a>
                        </div>
                        <div class="card-header">
                            <h3 class="mb-0 text-center">Employee wise Attendance Report</h3>
                        </div>
                        <div class="card-body">
                            <div class="container h-50 w-50">
                                <div class="card" style="border-radius: 60px;">
                                    <div class="card-header bg-primary"></div>
                                    <div class="card-body bg-primary">
